
<h1>Create Interview</h1>
<hr />
<form ng-submit="onCreate()">
    <div class="form-group">
        <label>
            Interview Title<br />
            <input type="text" name="title" ng-model="interview.title" class="form-control" placeholder="Enter title of interview" />
        </label><br />
    </div>
    <div class="form-group">
        <label>
            Summary Lines<br />
            <textarea name="summary" ng-model="interview.summary" cols="40" rows="5" class="form-control" placeholder="Each summary line should be on its own line"></textarea>
        </label><br />
    </div>
    <div class="form-group">
        <label>
            Manual Transcription<br />
            <textarea name="transcription" ng-model="interview.transcription" cols="40" rows="5" class="form-control" placeholder="For search purposes"></textarea>
        </label><br />
    </div>
    <div class="form-group">
        <label>
            Soundcloud Embed Code<br />
            <input name="soundcloud" ng-model="interview.soundcloud" type="text" class="form-control" placeholder="Paste Soundcloud Embed Code" />
        </label><br />
    </div>
    <div class="form-group">
        <label>
            Interviewee Name<br />
            <input name="interviewee" ng-model="interview.interviewee" type="text" class="form-control" placeholder="Interviewee Name" />
        </label><br />
    </div>
    <div class="form-group">
        <label>
            Interviewer Name<br />
            <input name="interviewer" ng-model="interview.interviewer" type="text" class="form-control" placeholder="Interviewer Name" />
        </label><br />
    </div>
    <div class="form-group">
        <label>
            Date of Interview<br />
            <input name="date" ng-model="interview.date" class="form-control" type="date" />
        </label><br />
    </div>
    <input type="submit" value="Create!" class="btn btn-primary" />
    <br /><br />
</form>