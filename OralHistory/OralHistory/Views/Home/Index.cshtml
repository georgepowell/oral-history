<!DOCTYPE html>
<html ng-app="OralHistoryApp">
<head>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Browsing Oral History</title>
</head>
<body ng-controller="LandingPageController">

    <header class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" ng-href="/#/search/{{q}}">Browsing Oral History</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form class="navbar-form navbar-right" role="search" ng-submit="navigateSearch()">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search" ng-model="q" >
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </header>

    <div class="container">
        <div ng-view>
        </div>
    </div>

    @Scripts.Render("~/bundles/Angular")
    @Scripts.Render("~/bundles/OralHistoryApp")
</body>
</html>